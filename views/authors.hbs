<div class="sidebar">
  <div class="sidebar_authors">
    <img src="../images/boxer.jpg" alt="boxer" />
    <h3><a href="/authors">Authors</a></h3>
  </div>
  <div class="sidebar_books">
    <img src="../images/books.jpg" alt="bookstack" />
    <h3><a href="/books">Books</a></h3>
  </div>
</div>

<div class="author_container">
  {{#author}}
  <div class="individual_author">
    <img src="{{img_url}}" alt="pic of author" />

    <div class="author_info">
      <div class="author_heading">
        <h3><a href="/authors/{{authors_id}}">{{first}} {{last}}</a></h3>
        <div class="author_buttons">
          <a href="/authors/{{authors_id}}/edit">
            <button>Edit</button>
          </a>
          <a href="/authors/{{authors_id}}/delete">
            <button>Delete</button>
          </a>
        </div>
      </div>
      <p>{{bio}}</p>
      <h5>Books</h5>
      <div class="author_book_container">
        <ul>
          <li>{{title}}</li>
        </ul>
      </div>
    </div>

  </div>
  <hr>
  {{/author}}

</div>
